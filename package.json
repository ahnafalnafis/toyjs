  },
  "homepage": "https://github.com/ahnafalnafis/toyjs#readme",
  "keywords": [
    "ToyJS",
    "toyjs",
    "Toy.js",
    "toy-js",
    "toy.js"
  ],
  "devDependencies": {
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22",
    "typescript": "^5.0.4",
    "webpack": "^5.78.0",
    "webpack-cli": "^5.0.1"
  }
}
