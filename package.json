  "name": "toyjs",
  "version": "1.0.0",
  "description": "A simple JavaScript web framework. Inspired by Flutter.",
  "main": "./dist/index",
  "type": "commonjs",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "tsc && webpack --progress",
